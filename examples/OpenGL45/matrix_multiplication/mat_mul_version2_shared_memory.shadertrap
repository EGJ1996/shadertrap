DECLARE_SHADER shader KIND COMPUTE
#version 450

#define KERNEL_SIZE 4
#define MAT_SIZE  16


layout(local_size_x=1, local_size_y=1, local_size_z=1) in;

layout(std430,binding = 0) buffer array1 {
  int[16][16] data1;
};
layout(std430,binding=1) buffer array2 {
  int[16][16] data2;
};
layout(std430,binding=2) buffer result{
  int[16][16] res;
};




int[KERNEL_SIZE][KERNEL_SIZE] submatrix_mul(int[KERNEL_SIZE][KERNEL_SIZE] a, int[KERNEL_SIZE][KERNEL_SIZE] b){
    int[KERNEL_SIZE][KERNEL_SIZE] tmp_buf;
    int i, j, k;

    for(i = 0;i < KERNEL_SIZE; i++){
        for(j = 0;j < KERNEL_SIZE; j++)
        tmp_buf[i][j] = 0;
    }

    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0; j < KERNEL_SIZE; j++){
            for(k = 0; k < KERNEL_SIZE; k++){
                tmp_buf[i][j] += (a[i][k] * b[k][j]);
            }
        }
    }
    return tmp_buf;
}

int take_element(int[MAT_SIZE][MAT_SIZE] mat, uint row, uint col, uint x, uint y){
    return mat[row * KERNEL_SIZE + x][col * KERNEL_SIZE + y];
}

int[KERNEL_SIZE][KERNEL_SIZE] take_submatrix(int[MAT_SIZE][MAT_SIZE] mat, uint x_a, uint y_a){
    
    int[KERNEL_SIZE][KERNEL_SIZE] res_a;
    int i, j;

    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0; j < KERNEL_SIZE; j++){
            res_a[i][j] = mat[x_a * KERNEL_SIZE + i][y_a * KERNEL_SIZE + j];
        }
    }
    return res_a;
}

int[KERNEL_SIZE][KERNEL_SIZE] zero_matrix(int[KERNEL_SIZE][KERNEL_SIZE] mat){

    int i, j;
    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0; j < KERNEL_SIZE; j++){
            mat[i][j] = 0;
        }
    }
    return mat;
}

shared int data1_sub[KERNEL_SIZE][KERNEL_SIZE], data2_sub[KERNEL_SIZE][KERNEL_SIZE];

void main() {
    
    int i,j,k;
    int[KERNEL_SIZE][KERNEL_SIZE] C,tmp_res;
    uint row = gl_WorkGroupID[0],col = gl_WorkGroupID[1];
    uint x = gl_LocalInvocationID[0], y = gl_LocalInvocationID[1];
    data1_sub[x][y] = take_element(data1,row,col,x,y);
    data2_sub[x][y] = take_element(data2,row,col,x,y);

    barrier();

    C = zero_matrix(C);

    for(k = 0; k < MAT_SIZE/KERNEL_SIZE; k++){    
        tmp_res = submatrix_mul(data1_sub,data2_sub);
        for(i = 0; i < KERNEL_SIZE; i++){
            for(j = 0; j < KERNEL_SIZE; j++){
                C[i][j] += tmp_res[i][j];
            }
        }
        barrier();
    }

    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0;j < KERNEL_SIZE; j++){
            res[x * KERNEL_SIZE + i][y * KERNEL_SIZE + j] = C[i][j];
        }
    }

}
END

