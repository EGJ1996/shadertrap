DECLARE_SHADER shader KIND COMPUTE
#version 450

#define KERNEL_SIZE 4
#define MAT_SIZE  16


layout(local_size_x=1, local_size_y=1, local_size_z=1) in;

layout(std430,binding = 0) buffer array1 {
  mat4x4[4][4] data1;
};
layout(std430,binding=1) buffer array2 {
  mat4x4[4][4] data2;
};
layout(std430,binding=2) buffer result{
  float[16][16] res;
};



float[KERNEL_SIZE][KERNEL_SIZE] submatrix_mul(mat4x4 a, mat4x4 b){
    float[KERNEL_SIZE][KERNEL_SIZE] tmp_buf;
    int i, j, k;

    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0;j < KERNEL_SIZE; j++)
        tmp_buf[i][j] = 0;
    }

    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0; j < KERNEL_SIZE; j++){
            for(k = 0;k < KERNEL_SIZE; k++){
                tmp_buf[i][j] += (a[i][k] * b[k][j]);
            }
        }
    }
    return tmp_buf;
}

mat4x4 take_submatrix(mat4x4[4][4] mat, uint x_a, uint y_a){
    return mat[x_a][y_a];
}

float[KERNEL_SIZE][KERNEL_SIZE] zero_matrix(float[KERNEL_SIZE][KERNEL_SIZE] mat){
    int i,j;
    for(i = 0; i < KERNEL_SIZE; i++){
        for(j = 0;j < KERNEL_SIZE; j++){
            mat[i][j] = 0;
        }
    }
    return mat;
}

void main() {
    int i,j,k,p,q;
      float[KERNEL_SIZE][KERNEL_SIZE] C,tmp_res;
      mat4x4 data1_sub,data2_sub;

      for(i = 0;i < MAT_SIZE/KERNEL_SIZE; i++){
          for(j = 0; j < MAT_SIZE/KERNEL_SIZE; j++){
              C = zero_matrix(C);
              for(k = 0; k < MAT_SIZE/KERNEL_SIZE; k++){
                  data1_sub = take_submatrix(data1, i, k);
                  data2_sub = take_submatrix(data2, k, j);
                  tmp_res = submatrix_mul(data1_sub, data2_sub);   
                  for(p = 0; p < KERNEL_SIZE; p++){
                      for(q = 0;q < KERNEL_SIZE; q++){
                          C[p][q] += tmp_res[p][q];
                      }
                  }
              }
              for(p = 0; p < KERNEL_SIZE; p++){
                  for(q = 0; q < KERNEL_SIZE; q++){
                      res[i * KERNEL_SIZE + p][j * KERNEL_SIZE + q] = C[p][q];
                  }
              }
          }
      }
}
END

